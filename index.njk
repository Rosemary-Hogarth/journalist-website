---
layout: base
---


{% set slideshow = collections.homepage_slideshow | sort(attribute='data.order') %}

{% if slideshow.length > 0 %}
  <div class="home-container">
    {% for slide in slideshow %}
      <div class="home-slide {% if loop.first %}active{% endif %}">
        <img src="{{ slide.data.image }}" alt="{{ slide.data.title }}" >
      </div>
    {% endfor %}
  </div>
{% endif %}

  <div class="home-name-columns">
  <div class="left-column"></div>
  <div class="right-column" onclick="toggleMenu()">
      <div class="vertical-name">
        <span class="first-name">Marie-Louise</span>
        <span class="last-name">Schlutius</span>
      </div>

  </div>
</div>

</div>


{% block scripts %}
  <script src="/index.js"></script>
{% endblock %}
